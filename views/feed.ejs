<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feed</title>
  <link rel="stylesheet" href="/stylesheets/feed.css">

</head>

<body>
    <div class="navbar">
        <% if (req.isAuthenticated()) { %>
            <a href="/profile" class="links"><ion-icon name="person-circle-outline"></ion-icon><p><%=user.username%></p></a>
            <a href="/logout" class="links"><ion-icon name="log-out-outline"></ion-icon> <p>Logout</p></a>
            </div>
            <% } else { %>
                <a href="/login" class="links"><ion-icon name="log-in-outline"></ion-icon><p>Login</p></a>
            <% } %>
    </div>
    <div class="container">
        <% posts.forEach(post => { %>
            <div class="card">
                <div class="image-container">
                    <h3><%=post.user.username%></h3>
                    <img src="/images/uploads/<%= post.image %>" alt="Profile Image" />
                <p class="text-center"><%= post.imageText %></p>
                    <p class="text-center">
                        <% if (post.likes && post.likes.length > 0) { %>
                            <%= post.likes.length %> <%= post.likes.length === 1 ? 'like' : 'likes' %>
                        <% } else { %>
                            0 likes
                        <% } %>
                    </p>
                    <% if (req.isAuthenticated()) { %>
                        <div class="flex">
                            <form action="/like/<%= post._id %>" method="POST">
                                <button id="like" type="submit">
                                    <% if (post.likes.includes(user._id)) { %>
                                        Dislike
                                    <% } else { %>
                                        Like
                                    <% } %>
                                </button>
                            </form>
                            
                        </div>
                    <% } else { %>
                        <a href="/login" id="login">Login to like</a>
                    <% } %>
                    <form action="/post/<%=post.id%>" method="get">
                        <input type="submit" value="Read More">
                      </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</html>