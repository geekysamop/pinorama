<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feed</title>
  <link rel="stylesheet" href="/stylesheets/feed.css">

</head>

<body>
    <div class="container">
        <% posts.forEach(post => { %>
            <div class="image-container">
                <img src="/images/uploads/<%= post.image %>" alt="Profile Image" />
                <p class="image-caption"><%= post.imageText %></p>
                <% if (req.isAuthenticated()) { %>
                    <div class="flex">
                        <form action="/like/<%= post._id %>" method="POST">
                            <button id="like" type="submit">Like</button>
                        </form>
                        <form action="/dislike/<%= post._id %>" method="POST">
                            <button id="dislike" type="submit">Dislike</button>
                        </form>
                    </div>
                <% } else { %>
                    <a href="/login" id="login">Login to like</a>
                <% } %>
                <p>
                    <% if (post.likes && post.likes.length > 0) { %>
                        <%= post.likes.length %> <%= post.likes.length === 1 ? 'like' : 'likes' %>
                    <% } else { %>
                        0 likes
                    <% } %>
                </p>
            </div>
        <% }) %>
    </div>
</body>

  

</html>